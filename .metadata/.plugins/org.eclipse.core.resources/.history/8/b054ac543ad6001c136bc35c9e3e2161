package exercicioList;
import java.util.List;
import java.util.*;
public class principal {

	public static void main(String[] args) {
		List<Double> notas = new  ArrayList <> (); 
		notas.add(7.0);
		notas.add(8.0);
		notas.add(9.0);
		notas.add(6.0);
		notas.add(5.0);
		notas.add(3.0);
		notas.add(4.0);
		System.out.println("notas: " + notas.toString());
		
		System.out.print("exiba a nota na posição 5: "+notas.indexOf(5d));
		System.out.println("Adicionar na lista a nota 8 na posição 4: ");
			notas.add(4 , 8.0);
		System.out.println(notas);
		System.out.println("Subistitua a nota 5 pela 6: ");
		notas.set(notas.indexOf(5d) , 6.0);
		System.out.println(notas);
	}

}
